// 配置详情介绍 http://json.schemastore.org/tsconfig
{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "target": "ES2015",
    "module": "es2015",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": false,
    "esModuleInterop": true,
    "sourceRoot": "src",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "experimentalDecorators": true
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
